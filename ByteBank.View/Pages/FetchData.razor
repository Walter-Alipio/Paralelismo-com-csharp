@page "/fetchdata"
@using ByteBank.View.Data
@inject ViewDataClientsService ClienteService

<PageTitle>ByteBank</PageTitle>

<h1>ByteBank transações</h1>

<p>Processamento da informações do dia.</p>
<button class="btn btn-primary" disabled=@IsTaskRunning @onclick=@ProccessOnClick>Fazer Processamento</button>

@if (modelClient == null)
{   
    if(IsTaskRunning)
    {
        <p><em>Loading...</em></p>
    }
}
else
{
    <div>
        <br>
        @* <p>@modelClient.tempoDecorrido</p> *@
        <p>@modelClient.mensagem</p>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Resultado:</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var resultado in modelClient.Resultado)
            {
                <tr>
                    <td>@resultado</td>       
                </tr>
            }
        </tbody>
    </table>
}

@code {

    private ViewModelDataClient? modelClient;
    private bool IsTaskRunning = false;

    private async void ProccessOnClick()    
    {
      this.IsTaskRunning = true;

      modelClient = await ClienteService.ProcessarAsync();
    
      this.IsTaskRunning = false;
      StateHasChanged ();
    }

}
